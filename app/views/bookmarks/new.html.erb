<%= form_for [@bookmark] do |f| %>
 <div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control', placeholder: "What is the title of your YMark?" %>
</div>
 <div class="form-group">
  <%= f.label :url %>
  <%= f.text_area :url, class: 'form-control', placeholder: "What is the url of your YMark?" %>
</div>

 <div class="form-group">
      <h3>HashTags</h3>
      <% Topic.all.each do |topic| %>
        <%= f.label "##{topic.title}" %>
        <%= check_box_tag "bookmark[topic_ids][]", topic.id, @bookmark.topic_ids.include?(topic.id) %><br />
      <% end %>
 </div>


 <div class="form-group">
  <%= f.submit "Save",  class: 'btn btn-success'%>
</div>

<%= params.inspect %>
<% end %>